{
  "name": "gamercoin",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "yarn compile && tsc -p tsconfig.build.json",
    "deploy": "ts-node src/index.ts",
    "compile": "waffle waffle-solcjs.json",
    "compile:native": "waffle waffle-native.json",
    "test": "mocha",
    "typecheck": "tsc --noEmit",
    "lint": "yarn lint:ts && yarn lint:sol",
    "lint:ts": "eslint --ext .ts test",
    "lint:sol": "solium --no-soliumignore --dir contracts",
    "lint:fix": "yarn lint:ts --fix && yarn lint:sol --fix",
    "clean": "rimraf build dist",
    "clean:contracts": "rimraf build",
    "prebuild": "yarn clean",
    "precompile": "yarn clean:contracts",
    "precompile:native": "yarn clean:contracts"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^3.0.2",
    "ethers": "^5.0.1"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/chai-as-promised": "^7.1.2",
    "@types/mocha": "^7.0.2",
    "@types/node": "^10.17.26",
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^7.3.0",
    "eslint-plugin-import": "^2.21.2",
    "ethereum-waffle": "^3.0.0",
    "ethlint": "^1.2.5",
    "mocha": "^8.0.1",
    "rimraf": "^3.0.2",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  }
}
